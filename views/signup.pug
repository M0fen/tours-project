extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your account
      form.form.form--signUp
         .form__group
          label.form__label(for='name') Name 
          input#name.form__input(type='text', value="pug@alberto.com" placeholder='Jhon Doe', required)
         .form__group
           label.form__label(for='email') Email address
           input#email.form__input(type='email',value="pug@alberto.com" placeholder='you@example.com', required)
         .form__group.ma-bt-md
           label.form__label(for='password') Password
           input#password.form__input(type='password',value="pug@alberto.com" placeholder='••••••••', required, minlength='8')

         .form__group.ma-bt-md
           label.form__label(for='passwordConfirm') passwordConfirm
           input#passwordConfirm.form__input(type='password',value="pug@alberto.com" placeholder='••••••••', required, minlength='8')  
         .form__group
           button.btn.btn--green Sign up